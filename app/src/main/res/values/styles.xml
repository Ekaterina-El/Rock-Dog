<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="main_menu_item">
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="cardClickable">
    <item name="android:clickable">true</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
  </style>

  <style name="main_menu_item.wrapper" parent="cardClickable">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_height">match_parent</item>

  </style>

  <style name="main_menu_item.content">
    <item name="android:layout_width">match_parent</item>
    <item name="android:paddingVertical">15dp</item>
    <item name="android:orientation">vertical</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="settings_item">
    <item name="android:layout_width">30dp</item>
    <item name="android:layout_height">30dp</item>
    <item name="android:layout_marginEnd">10dp</item>
    <item name="android:tint">@color/second_color</item>
  </style>

  <style name="button" parent="ThemeOverlay.Material3.Button">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/montserrat_regular</item>
    <item name="android:shadowRadius">100</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:clipToPadding">false</item>
  </style>

  <style name="button.fill" parent="button">
    <item name="android:background">@drawable/button_color_wrapper</item>
    <item name="android:textColor">@color/text_on_primary</item>
  </style>

  <style name="button.outline" parent="button">
    <item name="android:background">@drawable/button_wrapper</item>
    <item name="android:textColor">@color/primary_color_dark</item>
  </style>
</resources>