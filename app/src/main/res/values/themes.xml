<resources>
  <!-- Base application theme. -->
  <style name="Theme.RockDog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary_color</item>
    <item name="colorPrimaryVariant">@color/primary_color_dark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/primary_color</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>
    <!-- Customize your theme here. -->

    <item name="android:windowFullscreen">true</item>
    <item name="android:textViewStyle">@style/text</item>
  </style>

  <style name="FieldContent">
    <item name="android:maxLines">1</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/on_second_color</item>
    <item name="android:ellipsize">end</item>
    <item name="android:fontFamily">@font/montserrat_regular</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="FieldWrapper" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxStrokeColor">@color/box_color</item>
    <item name="hintTextColor">@color/white</item>
    <item name="errorIconDrawable">@null</item>
    <item name="startIconTint">@color/white</item>
    <item name="android:textColorHint">@color/white</item>
    <item name="errorEnabled">true</item>
  </style>

  <style name="text" parent="android:Widget.TextView">
    <item name="android:textColor">@color/second_color</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/montserrat_regular</item>
  </style>


  <style name="text.clickable" parent="text">
    <item name="android:textColor">@color/accent_color</item>
    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>
  </style>

  <style name="text.contrast" parent="text">
    <item name="android:textColor">@color/on_second_color</item>
    <item name="android:fontFamily">@font/nothing_you_could_do_regular</item>
    <item name="android:textSize">13sp</item>
  </style>

  <style name="text.hint.small" parent="text.hint">
    <item name="android:textSize">12sp</item>
  </style>

  <style name="text.hint">
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="text.header1">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="text.big">
    <item name="android:textSize">34sp</item>
  </style>

  <style name="text.header2">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="text.header3">
    <item name="android:textSize">15sp</item>
  </style>

  <style name="icon">
    <item name="android:layout_width">20dp</item>
    <item name="android:layout_height">20dp</item>
    <item name="android:tint">@color/primary_color_dark</item>
  </style>

  <style name="splash_screen" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
    <item name="colorPrimaryDark">@color/accent_color</item>
    <item name="colorAccent">@color/text_on_primary</item>
    <item name="colorPrimary">@color/primary_color</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="actionMenuTextColor">@color/text_on_primary</item>
  </style>

  <style name="Slide">
    <item name="android:windowEnterAnimation">@anim/slide_up</item>
    <item name="android:windowExitAnimation">@anim/slide_down</item>
  </style>
</resources>